


<h1>Tweets</h1>

<% @people.each do |user| %>
<h2><%= user.full_name %></h2>

<% user.tweets.each do |tweet| %>

<blockquote>
  <%= link_to tweet.text, tweet_path(id: tweet.id) %> <cite><%= tweet.posted_at %></cite>
</blockquote>

  <p><%= tweet.text %></p>
<% end %>
<% end %>

<div class="all_users">
<% @users.each do |user| %>
  <li>
    <% if @current_user.following? user %>
      <%= link_to "Stop Following #{user.full_name}", stop_following_user_path(id: user.id), method: :post %>
    <% else %>
      <%= link_to "Follow #{user.full_name}", follow_user_path(id: user.id), method: :post %>
    <% end %>
  </li>
<% end %>
</div>
